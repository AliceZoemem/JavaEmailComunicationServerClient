<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="sample.ControllerMain">
    <children>
        <GridPane fx:id="vboxNew" alignment="CENTER" hgap="10" vgap="10">
            <children>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="2"  text="Destinatari" />
                <TextField fx:id="receivers" GridPane.columnIndex="2"  GridPane.rowIndex="2"  prefWidth="400"/>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="3" text="Argomento" />
                <TextField fx:id="argument" GridPane.columnIndex="2" GridPane.rowIndex="3" prefWidth="400"/>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="4" text="Testo" />
                <TextField fx:id="text" GridPane.columnIndex="2" GridPane.rowIndex="4" prefWidth="400"/>
                <Button fx:id="btnInvioEmail" text="Invia Email" onAction="#sendEmail" GridPane.rowIndex="5" GridPane.columnIndex="2"></Button>
                <Text fx:id="errorText" GridPane.rowIndex="6" GridPane.columnIndex="2"></Text>
                <Text fx:id="errorEmails" GridPane.rowIndex="7" GridPane.columnIndex="2"></Text>
                <Text fx:id="resSendEmail" GridPane.rowIndex="8" GridPane.columnIndex="2"></Text>
            </children>
        </GridPane>
    </children>
</AnchorPane>
