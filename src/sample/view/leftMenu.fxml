<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="sample.ControllerMain">
    <children>
        <VBox fx:id="vboxNew" alignment="BASELINE_LEFT" spacing="8.0">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <Text fx:id="account" GridPane.rowIndex="1" text="Benvenuto"></Text>
            <children>
                <Hyperlink text="Invia Email" onAction="#writeEmail"></Hyperlink>
                <Hyperlink text="Riepilogo Email Inviate" onAction="#sent"></Hyperlink>
                <Hyperlink text="Riepilogo Email Ricevute" onAction="#received"></Hyperlink>
                <Hyperlink text="Logout" style="-fx-text-fill: red;" onAction="#logout">
                    <VBox.margin>
                        <Insets>
                            <top>430</top>
                        </Insets>
                    </VBox.margin>
                </Hyperlink>
            </children>
        </VBox>
    </children>
</AnchorPane>
